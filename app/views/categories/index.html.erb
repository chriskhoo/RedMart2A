<% provide(:title, 'All categories') %>
<h1>All categories</h1>

<ul class="products">
  <% @categories.each do |category| %>
    <li>
      <%= link_to category.name, category %>
      &nbsp; | &nbsp;
      <%= link_to "delete", category, method: :delete, data: { confirm: "You sure?" } %>
    </li>
  <% end %>
</ul>
